{
  "backend": {
    "port": 4000,
    "url": "http://localhost:4000",
    "env_file": "backend/.env",
    "env_variables": {
      "PORT": 4000,
      "NODE_ENV": "development",
      "FRONTEND_URL": "http://localhost:3000"
    }
  },
  "frontend": {
    "port": 3000,
    "url": "http://localhost:3000",
    "env_file": "frontend/.env",
    "env_variables": {
      "PORT": 3000,
      "NEXT_PUBLIC_API_BASE_URL": "http://localhost:4000",
      "NODE_ENV": "development"
    }
  },
  "api_endpoints": {
    "base_url": "http://localhost:4000/api",
    "health": "/api/health",
    "live_stats": "/api/live-stats",
    "analyze": "/api/analyze",
    "alternatives": "/api/alternatives",
    "history": "/api/history",
    "predict": "/api/predict",
    "rules": "/api/rules"
  },
  "commands": {
    "start_backend": "cd backend && npm run start:dev",
    "start_frontend": "cd frontend && npm run dev",
    "start_all": ".\\start.ps1",
    "build_backend": "cd backend && npm run build",
    "build_frontend": "cd frontend && npm run build"
  },
  "configuration_files": [
    "backend/.env",
    "frontend/.env",
    "backend/src/main.ts",
    "frontend/src/lib/env.ts",
    "PORT_CONFIGURATION.md"
  ]
}
